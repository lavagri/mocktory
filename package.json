{
  "name": "mocktory",
  "version": "0.1.1",
  "license": "MIT",
  "main": "./lib/index.js",
  "module": "./lib/index.mjs",
  "types": "./lib/index.d.ts",
  "scripts": {
    "clean": "rimraf ./lib",
    "build": "pnpm clean && cross-env NODE_ENV=production tsup-node && pnpm copy-assets",
    "type": "tsc --noEmit -p tsconfig.json",
    "copy-assets": "pnpm copy-db-commands && pnpm copy-docs",
    "copy-db-commands": "copyfiles -f src/db/commands/*.lua lib/commands",
    "copy-docs": "copyfiles -f docs/openapi.yaml lib",
    "format": "prettier --write .",
    "lint": "eslint \"src/**/*.ts\"",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint",
    "release": "release publish",
    "test": "pnpm test:unit && pnpm test:int",
    "test:unit": "vitest run --config ./test/vite.config.unit.ts",
    "test:int": "vitest run --config ./test/vite.config.int.ts"
  },
  "packageManager": "pnpm@9.6.0",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "body-parser": "1.20.2",
    "express": "4.19.2",
    "glob": "11.0.0",
    "http-status-codes": "2.3.0",
    "ioredis": "5.4.1",
    "msw": "2.3.4",
    "strict-event-emitter": "0.5.1",
    "swagger-ui-express": "5.0.1",
    "yaml": "2.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@ossjs/release": "0.8.1",
    "@swc/cli": "0.4.0",
    "@swc/core": "1.7.6",
    "@types/express": "4.17.21",
    "@types/node": "22.4.0",
    "@types/swagger-ui-express": "4.1.6",
    "@typescript-eslint/eslint-plugin": "6.19.0",
    "@typescript-eslint/parser": "6.19.0",
    "@vitest/coverage-v8": "2.0.5",
    "copyfiles": "2.4.1",
    "cross-env": "7.0.3",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "husky": "9.1.4",
    "lint-staged": "15.2.7",
    "prettier": "3.3.3",
    "rimraf": "6.0.1",
    "tsup": "8.2.3",
    "typescript": "5.3.3",
    "unplugin-swc": "1.5.1",
    "vitest": "2.0.5",
    "vitest-environment-testcontainers": "0.1.0"
  },
  "lint-staged": {
    "src/**/*.{ts}": [
      "npm run lint"
    ]
  },
  "files": [
    "lib",
    "src",
    "LICENSE.md",
    "README.md"
  ]
}
