{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./src/*"]
    },
    "types": ["vitest/globals"]
  },
  "exclude": ["node_modules", "lib"]
}
